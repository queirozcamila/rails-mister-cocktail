
<div class='banner' style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1526415302530-ad8c7d818689?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80)">

<h1>Cocktails</h1>

<div class='container'>
  <div class='cards'>
    <% @cocktails.each do |cocktail| %>
        <div class='card-category' style="background-image: url(<%= @image %>); opacity: 0.5">
        <h3><%= link_to cocktail.name, cocktail_path(cocktail)%></h3>
      </div>
      <p> </p>
    <% end %>
  </div>

  <%= link_to "Adicione novo drink", new_cocktail_path, class: "btn btn-primary" %>
</div>
</div>

