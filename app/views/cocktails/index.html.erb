<div class='container-first'>
  <div class='home-banner'>
    <div class="home-banner-tittle">
      <h1>cocktails</h1>
    </div>
    <div class="home-banner-tittle">
      <span id="banner-typed-text"></span>
    </div>
  </div>
</div>

<div class='main-card'>
  <div class='container'>
    <div class='cards'>
    <% @cocktails.each do |cocktail| %>
          <div class='card-category'>
          <h3><%= link_to cocktail.name.upcase, cocktail_path(cocktail), class:'card-text'%></h3>
          </div>
      <% end %>
    </div>
</div>
  <%= link_to "adicione novo drink", new_cocktail_path, class:"btn btn-primary" %>
</div>

