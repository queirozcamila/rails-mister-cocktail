<div class='home-banner' >
  <h1>cocktails</h1>
  <p>
    <span id="banner-typed-text"></span>
  </p>
</div>
<div class='main-card' style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1526415302530-ad8c7d818689?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80)">
<div class='container'>
  <div class='cards'>
    <% @cocktails.each do |cocktail| %>
        <div class='card-category'>
        <h3><%= link_to cocktail.name.upcase, cocktail_path(cocktail)%></h3>
        </div>
    <% end %>
  </div>

</div>
  <%= link_to "adicione novo drink", new_cocktail_path, class: "btn btn-primary" %>
</div>

