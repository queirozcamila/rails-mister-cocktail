<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="cocktail-show-card">
        <h1><%= @cocktail.name %></h1>
        <p> </p>
        <%= cl_image_tag @cocktail.photo.key, height: 200, width:300, crop: :fill%>
        <% @cocktail.doses.each do |dose| %>
          <%  if @cocktail.photo.attached? %>
            <%= cl_image_tag @cocktail.photo.key, height: 200, width:300, crop: :fill%>
          <% else %>
            <%= " " %>
          <% end %>
          <p> </p>
          <p><%= dose.description %></p>
          <p><%= dose.ingredient.name %></p>
         <!--  <%= link_to 'Deletar dose', dose_path(@cocktail), method: :delete %> -->
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Volte para a lista de cocktails', cocktails_path, class: "btn btn-primary"  %>
<%= link_to 'Adicione doses', new_cocktail_dose_path(@cocktail), class: "btn btn-primary"  %>
<%= link_to "Remove", cocktail_path(@cocktail),
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: "btn btn-primary" %>

